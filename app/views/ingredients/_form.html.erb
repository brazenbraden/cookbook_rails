<%= form_with(model: ingredient, class: "contents") do |form| %>
  <%= render "shared/form_errors", model: ingredient %>

  <div class="inline-table">
    <div class="table-cell pr-4">
      <%= form.label :name, class: "table-row" %>
      <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="table-cell pr-4">
      <%= form.label :quantity %>
      <%= form.text_field :quantity, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="table-cell pr-4">
      <%= form.label :calories %>
      <%= form.number_field :calories, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="table-cell align-bottom">
      <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
  </div>

<% end %>
