<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Cookbooks</h1>
    <%= turbo_frame_tag dom_id(Cookbook.new) do %>
      <%= link_to 'New cookbook', new_cookbook_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <% end %>
  </div>

  <div class="min-w-full">
    <%= turbo_stream_from "cookbooks" %>
    <%= turbo_frame_tag "cookbooks" do %>
      <%= render @cookbooks %>
    <% end %>
  </div>
</div>
